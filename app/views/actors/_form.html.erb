<div class="px-8 mb-4 text-white w-1/3">
  <%= form_with(model: actor, local: true) do |form| %>
    <%= render "shared/errors", object: actor %>

    <div class="flex flex-col mt-8">
      <%= form.label :image %>
      <%= form.file_field :image, value: "Browse", class: "text-xs italic mb-4" %>
    </div>
    
    <div class="flex flex-col mb-4">
      <%= form.label :name %>
      <%= form.text_field :name, autofocus: true, class: "bg-transparent shadow appearance-none border rounded w-full py-2 px-3 text-grey-darker mb-4" %>
    </div>

    <div class="flex flex-col mb-4">
      <%= form.label :birth_date %>
      <%= form.date_field :birth_date, class: "bg-transparent shadow appearance-none border rounded w-full py-2 px-3 text-grey-darker mb-4" %>
    </div>

    <div class="mb-8" id="gender">
      <%= form.label :gender %>
      <div><%= collection_radio_buttons(:actor, :gender, Actor.genders, :first, :first) %></div>
    </div>

    <div class="text-center">
      <%= form.submit "Update Actor", class: "bg-gray-600 text-white py-2 px-4 rounded hover:bg-gray-700" %>
    </div>
  <% end %>
</div>