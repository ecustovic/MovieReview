  <div class="px-8 pt-6 pb-8 mb-4 flex-col w-1/3">
  <h2 class="uppercase text-3xl text-blue-400" >Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    
    <div>
      <%= f.label :email, class: "block text-white text-sm my-4" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "E-mail", class:"shadow appearance-none border rounded w-full py-2 px-3 text-grey-darker" %>
    </div>

    <div>
      <%= f.label :password, class: "block text-white text-sm my-4" %>
      <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", class:"shadow appearance-none border border-red rounded w-full py-2 px-3 text-grey-darker mb-3" %>
      <p class="text-red text-xs italic text-white mb-4">Please choose a password.</p>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="form-group form-check">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, class:"text-white" %>
      </div>
    <% end %>

    <div class="text-center" >
      <%= f.submit "Log in", class:"bg-gray-600 text-white py-2 px-4 rounded hover:bg-gray-700" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
  </div>
