<header>
<nav>
  <%= link_to image_tag("logo.png"), root_path %>
  <ul class="left">
    <li>
      <%= nav_link_to "Released", movies_path %>
    </li>
    <li>
      <%= nav_link_to "Upcoming", filtered_movies_path(:upcoming) %>
    </li>
    <li>
      <%= nav_link_to "Recent", filtered_movies_path(:recent) %>
    </li>
    <li>
      <%= nav_link_to "Hits", filtered_movies_path(:hits) %>
    </li>
    <li>
      <%= nav_link_to "Flops", filtered_movies_path(:flops) %>
    </li>
    <% if user_signed_in? %>
      <li>
        <%= nav_link_to "Favourites",  favourites_path %>
      </li>
        <% if current_user.admin? %>
          <li>
            <%= nav_link_to "Actors",  actors_path %>
          </li>
      <% end %>
    <% end %>
  </ul>
  
  <ul class="right">
   
    <% if user_signed_in? %>
      <ul class="nav navbar-nav">
        <li class="dropdown">
          <a href="javascript:void(0)" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="true">
          <%= image_tag user_avatar(current_user, 20), class: "rounded-circle" %> </a>
          <ul class="dropdown-menu">
            <li><%= link_to "My profile", edit_user_registration_path, class:"button" %></li>
            <li><%= link_to "Sign Out", destroy_user_session_path, method: :delete, class:"button" %></li>
          </ul>
        </li>
      </ul>

    <% else %>
      <li><%= link_to  "Sign In", new_user_session_path, class:"button" %></li>
      <li><%= link_to "Sign Up", new_user_registration_path, class: "button" %></li>
    <% end %>
    
  </ul>
</nav>
</header>