<h2 class="uppercase text-2xl text-blue-400 ml-4">Search Results</h2>

<% if @search.search_movies.empty? %>
  <p class="ml-4 text-white">No Records Found </p>
<% else %>
  <% @search.search_movies.each do |c| %>
  <br>

  <div class="ml-4">
    <h4 class="uppercase text-blue-400"><%= link_to c.title, movie_path(id: c.slug) %></h4>
    <p class="text-blue-200">Rating: <%=c.rating %></p>
    <p class="text-blue-200">Released on: <%= c.released_on %></p>
  </div>
  <% end %>
<% end %>

<div class="ml-4 mt-8"><%= link_to "Back", root_path, class:"btn-primary" %></div>

