<section class="movie-details">
   <div class="image">
    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
      <div class="carousel-inner">
        <% @movie.images.each_with_index do | item, index | %>
          <div class="carousel-item <%= index == 0 ? 'active' : '' %> ">
            <%= image_tag item, class: "d-block w-100" %>
          </div>
        <% end %>
      </div>
      <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>

    <% if current_user %>
      <div class="faves">
        <%= fave_or_unfave_button(@movie, @favourite)%>
        
        <div class="count">
          <%= @fans.size %>
        </div>
      </div>
    <% end %>
  </div>

  <div class="details">
      <h1> <%= @movie.title %> </h1>
  <h2>
      <%= @movie.released_on %> | <%= @movie.rating %>
  </h2>

  <p>
      <%= @movie.duration %> &bull; <%= @movie.description %>
  </p>

  <div class="reviews">
      <%= render "shared/stars", percent: @movie.average_stars_as_percent %>

      <%= link_to pluralize(@movie.reviews.size, "review"), movie_reviews_path(@movie) %>
  </div>

  <table>
      <tr>
          <th>Total Gross: </th>
          <td> <%= total_gross(@movie) %> </td>
      </tr>
  </table>

  <%= link_to "Write Review", new_movie_review_path(@movie), class: "review" %>
  
    <aside>
        <% if @fans.present? %>
            <h4>Fans</h4>
            <ul>
            <% @fans.each do |user| %>
                <li>
                <%= user.name %>
                </li>
            <% end %>
            </ul>
        <% end %>

        <% if @genres.present? %>
          <h4>Genres</h4>
          <ul>
            <% @genres.each do |g| %>
              <li><%= g.name %></li>
            <% end %>
          </ul>
        <% end %>
    </aside>
  </div>
</section>

<% if current_user_admin? %>
  <section class="admin">
    <%= link_to "Edit", edit_movie_path(@movie), class: "button" %>
    <%= link_to "Delete", @movie, class: "button", method: :delete,
      data: { confirm: "Are you sure you want to delete movie!?" } %>
  </section>
<% end %>