<section class="movie-details">
    <div class="image">
    <%= image_tag @movie.image_file_name %>
    </div>

    <div class="details">
        <h1> <%= @movie.title %> </h1>
    <h2>
        <%= @movie.released_on %> | <%= @movie.rating %>
    </h2>

    <p>
        <%= @movie.duration %> &bull; <%= @movie.description %>
    </p>

    <div class="reviews">

        <%= render "shared/stars", percent: @movie.average_stars_as_percent %>

        <%= link_to pluralize(@movie.reviews.size, "review"), movie_reviews_path(@movie) %>
    </div>

    <table>
        <tr>
            <th>Total Gross: </th>
            <td> <%= total_gross(@movie) %> </td>
        </tr>
    </table>

    <%= link_to "Write Review", new_movie_review_path(@movie), class: "review" %>
   
    </div>
</section>


<% if current_user_admin? %>
    <section class="admin">
        <%= link_to "Edit", edit_movie_path(@movie), class: "button" %>
        <%= link_to "Delete", @movie, class: "button", method: :delete,
                            data: { confirm: "Are you sure you want to delete movie!?" } %>
    </section>
<% end %>